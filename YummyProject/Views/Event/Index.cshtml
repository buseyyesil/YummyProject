@model List<YummyProject.Models.Event>
@{
    ViewBag.Title = "Etkinlikler";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Etkinlik Yönetimi</h2>
<br />

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Resim</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Fiyat</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EventId</td>
                <td><img src="@item.ImageUrl" style="width:80px; height:80px;" /></td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Price ₺</td>
                <td>
                    <a href="/Event/UpdateEvent/@item.EventId" class="btn btn-warning btn-sm">Güncelle</a>
                    <a href="/Event/DeleteEvent/@item.EventId" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<br />
<a href="/Event/AddEvent" class="btn btn-primary">Yeni Etkinlik Ekle</a>