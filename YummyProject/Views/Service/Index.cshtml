@model List<YummyProject.Models.Service>
@{
    ViewBag.Title = "Hizmetler";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hizmet Yönetimi</h2>
<br />

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
       
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ServiceId</td>
   
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>
                    <a href="/Service/UpdateService/@item.ServiceId" class="btn btn-warning btn-sm">Güncelle</a>
                    <a href="/Service/DeleteService/@item.ServiceId" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<br />
<a href="/Service/AddService" class="btn btn-primary">Yeni Hizmet Ekle</a>