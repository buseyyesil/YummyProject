@model List<YummyProject.Models.Category>
@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Kategori Yönetimi</h2>
<br />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td>
                    <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-warning btn-sm">Güncelle</a>
                    <a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<br />
<a href="/Category/AddCategory" class="btn btn-primary">Yeni Kategori Ekle</a>