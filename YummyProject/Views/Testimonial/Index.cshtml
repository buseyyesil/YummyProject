@model List<YummyProject.Models.TestMonial>
@{
    ViewBag.Title = "Yorumlar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yorum Yönetimi</h2>
<br />

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Resim</th>
            <th>Ad Soyad</th>
            <th>Ünvan</th>
            <th>Yorum</th>
            <th>Puan</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TestMonialId</td>
                <td><img src="@item.ImageUrl" style="width:60px; height:60px; border-radius:50%;" /></td>
                <td>@item.NameSurname</td>
                <td>@item.Title</td>
                <td>@(item.Comment.Length > 50 ? item.Comment.Substring(0, 50) + "..." : item.Comment)</td>
                <td>
                    @for (int i = 0; i < item.Rating; i++)
                    {
                        <i class="fa fa-star text-warning"></i>
                    }
                </td>
                <td>
                    <a href="/Testimonial/UpdateTestimonial/@item.TestMonialId" class="btn btn-warning btn-sm">Güncelle</a>
                    <a href="/Testimonial/DeleteTestimonial/@item.TestMonialId" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<br />
<a href="/Testimonial/AddTestimonial" class="btn btn-primary">Yeni Yorum Ekle</a>