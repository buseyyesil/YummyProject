@model List<YummyProject.Models.Chef>
@{
    ViewBag.Title = "Şefler";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Şef Yönetimi</h2>
<br />

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Resim</th>
            <th>Ad Soyad</th>
            <th>Ünvan</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ChefId</td>
                <td><img src="@item.ImageUrl" style="width:60px; height:60px; border-radius:50%;" /></td>
                <td>@item.Name</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>
                    <a href="/Chef/UpdateChef/@item.ChefId" class="btn btn-warning btn-sm">Güncelle</a>
                    <a href="/Chef/DeleteChef/@item.ChefId" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<br />
<a href="/Chef/AddChef" class="btn btn-primary">Yeni Şef Ekle</a>