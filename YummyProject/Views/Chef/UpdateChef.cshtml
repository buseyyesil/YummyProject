@model YummyProject.Models.Chef
@{
    ViewBag.Title = "Şef Güncelle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Şef Güncelle</h2>
<br />

<form method="post">
    <input type="hidden" name="ChefId" value="@Model.ChefId" />

    <div class="form-group">
        <label>Resim URL</label>
        <input type="text" name="ImageUrl" class="form-control" value="@Model.ImageUrl" required />
    </div>
    <br />
    <div class="form-group">
        <label>Ad Soyad</label>
        <input type="text" name="Name" class="form-control" value="@Model.Name" required />
    </div>
    <br />
    <div class="form-group">
        <label>Ünvan</label>
        <input type="text" name="Title" class="form-control" value="@Model.Title" required />
    </div>
    <br />
    <div class="form-group">
        <label>Açıklama</label>
        <textarea name="Description" class="form-control" rows="4" required>@Model.Description</textarea>
    </div>
    <br />
    <button type="submit" class="btn btn-warning">Güncelle</button>
    <a href="/Chef/Index" class="btn btn-secondary">Geri Dön</a>
</form>