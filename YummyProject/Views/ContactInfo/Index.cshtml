@model List<YummyProject.Models.ContactInfo>
@{
    ViewBag.Title = "İletişim Bilgileri";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>İletişim Bilgileri Yönetimi</h2>
<br />

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Adres</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Çalışma Saatleri</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ContactInfoId</td>
                <td>@item.Address</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.OpenHours</td>
                <td>
                    <a href="/ContactInfo/UpdateContactInfo/@item.ContactInfoId" class="btn btn-warning btn-sm">Güncelle</a>
                    <a href="/ContactInfo/DeleteContactInfo/@item.ContactInfoId" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<br />
<a href="/ContactInfo/AddContactInfo" class="btn btn-primary">Yeni İletişim Bilgisi Ekle</a>