@model List<YummyProject.Models.Booking>
@{
    ViewBag.Title = "Onaylanmış Rezervasyonlar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Onaylanmış Rezervasyonlar</h2>
<br />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Ad Soyad</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Tarih</th>
            <th>Kişi Sayısı</th>
            <th>Mesaj</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BookingId</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.BookingDate.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@item.PersonCount kişi</td>
                <td>@item.MessageContent</td>
                <td>
                    <a href="/Booking/CancelApproval/@item.BookingId" class="btn btn-warning btn-sm">Onayı İptal Et</a>
                    <a href="/Booking/BookingDetails/@item.BookingId" class="btn btn-info btn-sm">Detay</a>
                    <a href="/Booking/DeleteApprovedBooking/@item.BookingId" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        Onaylanmış rezervasyon bulunmamaktadır.
    </div>
}