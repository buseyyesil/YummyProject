@model List<YummyProject.Models.Product>
@{
    ViewBag.Title = "Ürünler";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Ürün Yönetimi</h2>
<br />

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Resim</th>
            <th>Ürün Adı</th>
            <th>İçerik</th>
            <th>Fiyat</th>
            <th>Kategori</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td><img src="@item.ImageUrl" style="width:60px; height:60px;" /></td>
                <td>@item.ProductName</td>
                <td>@item.Ingredients</td>
                <td>@item.Price ₺</td>
                <td>@item.Category.CategoryName</td>
                <td>
                    <a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-warning btn-sm">Güncelle</a>
                    <a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<br />
<a href="/Product/AddProduct" class="btn btn-primary">Yeni Ürün Ekle</a>