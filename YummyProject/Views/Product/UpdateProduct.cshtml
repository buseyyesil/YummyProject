@model YummyProject.Models.Product
@{
    ViewBag.Title = "Ürün Güncelle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Ürün Güncelle</h2>
<br />

<form method="post">
    <input type="hidden" name="ProductId" value="@Model.ProductId" />

    <div class="form-group">
        <label>Resim URL</label>
        <input type="text" name="ImageUrl" class="form-control" value="@Model.ImageUrl" required />
    </div>
    <br />
    <div class="form-group">
        <label>Ürün Adı</label>
        <input type="text" name="ProductName" class="form-control" value="@Model.ProductName" required />
    </div>
    <br />
    <div class="form-group">
        <label>İçerikler</label>
        <input type="text" name="Ingredients" class="form-control" value="@Model.Ingredients" required />
    </div>
    <br />
    <div class="form-group">
        <label>Fiyat (₺)</label>
        <input type="number" step="0.01" name="Price" class="form-control" value="@Model.Price" required />
    </div>
    <br />
    <div class="form-group">
        <label>Kategori</label>
        <select name="CategoryId" class="form-control" required>
            @foreach (var category in ViewBag.categories)
            {
                <option value="@category.Value" @(category.Value == Model.CategoryId.ToString() ? "selected" : "")>@category.Text</option>
            }
        </select>
    </div>
    <br />
    <button type="submit" class="btn btn-warning">Güncelle</button>
    <a href="/Product/Index" class="btn btn-secondary">Geri Dön</a>
</form>