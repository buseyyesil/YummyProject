@model YummyProject.Models.Product
@{
    ViewBag.Title = "Ürün Ekle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Ürün Ekle</h2>
<br />

<form method="post">
    <div class="form-group">
        <label>Resim URL</label>
        <input type="text" name="ImageUrl" class="form-control" required />
    </div>
    <br />
    <div class="form-group">
        <label>Ürün Adı</label>
        <input type="text" name="ProductName" class="form-control" required />
    </div>
    <br />
    <div class="form-group">
        <label>İçerikler</label>
        <input type="text" name="Ingredients" class="form-control" placeholder="Örn: Domates, Biber, Soğan" required />
    </div>
    <br />
    <div class="form-group">
        <label>Fiyat (₺)</label>
        <input type="number" step="0.01" name="Price" class="form-control" required />
    </div>
    <br />
    <div class="form-group">
        <label>Kategori</label>
        <select name="CategoryId" class="form-control" required>
            <option value="">Kategori Seçiniz</option>
            @foreach (var category in ViewBag.categories)
            {
                <option value="@category.Value">@category.Text</option>
            }
        </select>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a href="/Product/Index" class="btn btn-secondary">Geri Dön</a>
</form>