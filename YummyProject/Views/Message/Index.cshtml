@model List<YummyProject.Models.Message>
@{
    ViewBag.Title = "Okunmamış Mesajlar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Okunmamış Mesajlar</h2>
<br />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Ad Soyad</th>
            <th>Email</th>
            <th>Konu</th>
            <th>Mesaj</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MessageId</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Subject</td>
                <td>@(item.MessageContent.Length > 50 ? item.MessageContent.Substring(0, 50) + "..." : item.MessageContent)</td>
                <td>
                    <a href="/Message/MessageDetails/@item.MessageId" class="btn btn-info btn-sm">Detay</a>
                    <a href="/Message/MarkAsRead/@item.MessageId" class="btn btn-success btn-sm">Okundu İşaretle</a>
                    <a href="/Message/DeleteMessage/@item.MessageId" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        Okunmamış mesaj bulunmamaktadır.
    </div>
}

<br />
<a href="/Message/ReadMessages" class="btn btn-secondary">Okunmuş Mesajlar</a>